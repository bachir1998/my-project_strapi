{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "price": {
      "type": "decimal"
    },
    "description": {
      "type": "text"
    },
    "size": {
      "type": "enumeration",
      "enum": [
        "s",
        "m",
        "l",
        "xl"
      ]
    },
    "stock": {
      "type": "boolean",
      "default": true
    },
    "image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "availability": {
      "type": "date"
    }
  }
}
